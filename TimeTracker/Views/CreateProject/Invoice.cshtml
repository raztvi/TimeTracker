@model TimeTracker.Models.CreateProjectModel

@{
    ViewData["Title"] = "Invoice";

<h2>Invoice</h2>

<form asp-controller="CreateProject" asp-action="Invoice" method="post"  role="form">
    <div class="form-group">
        <div class="row">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="col-xl-10 col-sm-6 col-md-6 col-lg-4">
                <label asp-for="ProjectName"></label>
                <select asp-for="ID"
                        class="form-control"
                        asp-items="@(new SelectList(@ViewBag.ListofInvoice, "ID", "ProjectName"))"></select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <input id="Submit1" type="submit" value="submit" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                @if (ViewBag.SelectedValue != 0)
                {
                    <text>Selected Invoice ID: </text> @ViewBag.SelectedValue;
                   
                }
            </div>
        </div>
    </div>

</form>

<div>
    <a asp-action="Index">Back</a>
</div>

}
